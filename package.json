{
  "name": "daps",
  "displayName": "DAPS",
  "description": "Tool for authorign and publishing documentation written in DocBook XML and AsciiDoc.",
  "version": "0.0.2",
  "repository": "https://github.com/openSUSE/vscode-daps",
  "publisher": "openSUSE",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:**/DC-*"
  ],
  "main": "./extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "daps.XMLformat",
        "key": "ctrl+shift+i",
        "when": "editorLangId == xml"
      }
    ],
    "commands": [
      {
        "command": "daps.validate",
        "title": "Validate with DC file",
        "category": "DAPS"
      },
      {
        "command": "daps.build",
        "title": "Build documentation",
        "category": "DAPS"
      },
      {
        "command": "daps.XMLformat",
        "title": "Format XML document",
        "category": "DAPS",
        "enablement": "editorLangId == xml"
      }
    ],
    "configuration": {
      "title": "DAPS",
      "properties": {
        "daps.DCfile": {
          "description": "Set the DC file for the current workspace. If not specified, the user is asked to select one",
          "type": "string",
          "default": null
        },
        "daps.buildTarget": {
          "description": "The build target for the current workspace. If not specified, the user is asked to select one",
          "type": "string",
          "default": null
        }
      }
    },
    "configurationDefaults": {
      "xml.format.enabled": false
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  }
}